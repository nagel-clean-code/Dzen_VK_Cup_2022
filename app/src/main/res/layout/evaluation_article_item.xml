<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_multi_stage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/die_matching_element"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/task_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/montserrat_extrabold"
            android:textColor="@color/turquoise"
            android:textSize="17sp"
            tools:text="Задача 1/2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="29dp"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingEnd="18dp"
            android:text="@string/rate_text"
            android:textColor="@color/light_turquoise"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="19dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/super_light_turquoise"
            android:textSize="18sp"
            tools:text="Текст" />

        <LinearLayout
            android:id="@+id/linear_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="19dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="19dp"
            android:orientation="horizontal" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
    </LinearLayout>

</FrameLayout>